<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialTheme.AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="CustomDivider">
        <item name="android:layout_height">@dimen/dimen_1</item>
        <item name="android:layout_width">@dimen/dimen_1</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AuthActivityButtonStyles" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">@dimen/dimen_50</item>
        <item name="android:insetBottom">@dimen/dimen_0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/lightgrey</item>
        <item name="android:textSize">@dimen/font_17</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/dimen_0</item>
        <item name="rippleColor">@color/lightgrey</item>
    </style>

    <style name="FragmentLoginButtonStyles" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_height">@dimen/dimen_50</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_13</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/dimen_2</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dimen_10</item>
        <item name="iconSize">@dimen/dimen_25</item>
        <item name="iconTint">@color/transparent</item>
        <item name="iconTintMode" tools:ignore="NewApi">add</item>
        <item name="rippleColor">@color/midGrey</item>
    </style>

    <style name="AuthPickerTheme" parent="MaterialTheme.AppTheme">
        <item name="android:windowBackground">@drawable/fragment_login_bg</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/lightgrey2</item>

        <item name="android:textColorLink">@color/white</item>

        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/darkGrey</item>
        <item name="android:layout_gravity">center</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomDivider.AuthActivityLoginDivider">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name="MainActivityHeader_1" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainActivityHeader_2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainActivityTopText1" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="MainActivityTopText" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="TransparentToolbar" parent="AppTheme.AppBarOverlay">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="FilterActivityHeader_1" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilterActivityText2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14.6sp</item>
        <item name="android:justificationMode" tools:ignore="NewApi">inter_word</item>
    </style>

    <style name="FilterActivityOptionTextView" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilterActivityRadioButtonStyle" parent="@style/Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:button">@drawable/filter_activity_radio_inset</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/filter_activity_propertytype_bg</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="FilterActivityChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">@dimen/filter_activity_chip_radius</item>
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="rippleColor">@color/lightgrey1</item>
        <item name="chipStrokeColor">@color/midGrey</item>
        <item name="chipIconVisible">false</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="android:checkable">true</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="FilterResultActivitySelectedItemStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:background">@drawable/filter_result_activity_selected_items_selector
        </item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="RecyclerViewPropertyNameStyle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
