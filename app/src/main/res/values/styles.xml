<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialTheme.AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="MainActivityHeader_1" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainActivityHeader_2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="TransparentToolbar" parent="AppTheme.AppBarOverlay">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="FilterActivityHeader_1" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilterActivityText2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14.6sp</item>
        <item name="android:justificationMode" tools:ignore="NewApi">inter_word</item>
    </style>

    <style name="FilterActivityOptionTextView" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilterActivityRadioButtonStyle" parent="@style/Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:button">@drawable/filter_activity_radio_inset</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/filter_activity_propertytype_bg</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="FilterActivityChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">@dimen/filter_activity_chip_radius</item>
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="rippleColor">@color/lightgrey1</item>
        <item name="chipStrokeColor">@color/midGrey</item>
        <item name="chipIconVisible">false</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="android:checkable">true</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
